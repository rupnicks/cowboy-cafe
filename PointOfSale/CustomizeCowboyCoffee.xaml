<UserControl x:Class="PointOfSale.CustomizeCowboyCoffee"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
            xmlns:local2="clr-namespace:CowboyCafe.Data;assembly=CowboyCafe.Data"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <StackPanel Width="300" HorizontalAlignment="Left">
            <TextBlock FontSize="30" Text="Customize Cowboy Coffee" />
            <CheckBox IsChecked="{Binding Path=Iced}">Ice</CheckBox>
            <CheckBox IsChecked="{Binding Path=RoomForCream}">Leave Room For Cream</CheckBox>
            <CheckBox IsChecked="{Binding Path=Decaf}">Decaf</CheckBox>
            <TextBlock>Choose the size of the drink:</TextBlock>
            <ComboBox ItemsSource="{Binding Source={local:EnumBindingSource {x:Type local2:Size}}}"/>
        </StackPanel>
    </Grid>
</UserControl>
